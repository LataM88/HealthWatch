<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/appointment_doctor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lekarz"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/blue_700" />

        <TextView
            android:id="@+id/appointment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/appointment_doctor_name"
            android:text="Data: XX-XX-XXXX"
            android:textSize="14sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/appointment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/appointment_date"
            android:text="Godzina: XX:XX"
            android:textSize="14sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/appointment_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/appointment_time"
            android:text="Notatki: ..."
            android:textSize="14sp"
            android:textColor="@color/black" />

        <ImageButton
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Usuń wizytę"
            android:padding="8dp"
            android:src="@android:drawable/ic_menu_delete" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>